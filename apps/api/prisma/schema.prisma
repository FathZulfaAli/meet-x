generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  customer_id   Int            @id @unique(map: "customer_id") @default(autoincrement())
  auth_id       Int?
  first_name    String         @db.VarChar(255)
  last_name     String?        @db.VarChar(255)
  used_ref_code String?        @db.VarChar(6)
  ref_code      String         @unique(map: "ref_code") @db.VarChar(6)
  amouth_points Int?
  isDiscount    Boolean        @default(false)
  created_at    DateTime       @default(now()) @db.Timestamp(0)
  updated_at    DateTime?      @db.Timestamp(0)
  auth          auth?          @relation(fields: [auth_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "customer_ibfk_1")
  referralCode  referralCode[]

  @@index([auth_id], map: "auth_id")
  @@map("customer")
}

model auth {
  id             Int              @unique(map: "id") @default(autoincrement())
  email          String           @unique(map: "email") @db.VarChar(255)
  password       String           @db.VarChar(255)
  role           auth_role        @default(customer)
  customer       Customer[]
  eventOrganizer eventOrganizer[]

  @@id([id, email])
}

model eventOrganizer {
  eo_id        Int       @id @unique(map: "eo_id") @default(autoincrement())
  auth_id      Int?
  first_name   String    @db.VarChar(255)
  last_name    String?   @db.VarChar(255)
  company_name String    @db.VarChar(255)
  created_at   DateTime  @default(now()) @db.Timestamp(0)
  updated_at   DateTime? @db.Timestamp(0)
  auth         auth?     @relation(fields: [auth_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "eventorganizer_ibfk_1")

  @@index([auth_id], map: "auth_id")
}

model referralCode {
  ref_log_id   Int       @id @unique(map: "ref_log_id") @default(autoincrement())
  rc_provider  Int?
  amount_Point Int
  created_at   DateTime  @default(now()) @db.Timestamp(0)
  expired_at   DateTime? @db.Timestamp(0)
  ref_code     Customer? @relation(fields: [rc_provider], references: [customer_id])

  @@index([rc_provider], map: "rc_provider")
}

enum auth_role {
  customer
  Seller
}

model cronLog {
  log_id     Int      @id @unique(map: "log_id") @default(autoincrement())
  status     String
  created_at DateTime @default(now()) @db.Timestamp(0)
}

model Event {
  id          Int         @id @default(autoincrement())
  tittle      String
  created_by  Int
  description String      @db.Text
  img         String
  date_event  DateTime
  price_type  EventType
  price       Int
  place       String
  seats       Int
  terms       String
  time        String
  rating      Float
  available   EventStatus

  createAt  DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

enum EventType {
  FREE
  PAID
}

enum EventStatus {
  AVAILABE
  UNAVAILABLE
}
